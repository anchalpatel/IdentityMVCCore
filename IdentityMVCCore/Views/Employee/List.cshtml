@model IEnumerable<IdentityMVCCore.Models.Employee>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <!-- Wrap the entire card in the anchor tag for the card to be clickable -->
            <a asp-route-id="@item.Id" asp-action="Details" asp-controller="Employee" class="card-link text-decoration-none">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title" style="color: inherit;">@item.Firstname @item.Lastname</h5>
                        <p class="card-text" style="color: inherit;"><strong>Salary:</strong> @item.Salary</p>
                        <p class="card-text" style="color: inherit;"><strong>Address:</strong> @item.Address</p>

                        <!-- Action buttons within the card -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                            <a href="@Url.Action("Delete", "Employee", new { id = item.Id })" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
